<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="RoundedSquare">
        <item name="cornerSize">15%</item>
    </style>

    <style name="Btn" parent="Widget.Material3.Button" tools:ignore="UnusedResources">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="DetailMovie" parent="" tools:ignore="UnusedResources">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>


    <style name="TextMovieList">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextMovieList2">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="dimensionTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" tools:ignore="UnusedResources">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="UiText" tools:ignore="UnusedResources">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">20sp</item>
    </style>
</resources>